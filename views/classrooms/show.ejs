<div class="container">
    <div class="container">
        <div class="row offset-2">
            <h1>Classroom Information </h1>
            <div class="card col-8">
                <div class="card-body">
                    <div class="row">
                        <div class="mb-3 col-6">
                            <label class="form-label">ID</label>
                            <h3><%= classroom.id %></h3>
                        </div>
                        <div class="mb-3 col-6">
                            <label class="form-label">Name</label>
                            <h3><%= classroom.name %></h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
         <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Age</th>
            <th scope="col">Show</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for ( student of students) { %>
            <tr>
              <td><%= student.id %></td>
              <td><%= student.name %></td>
              <td><%= student.last %></td>
              <td><%= student.age %></td>
              <td><a href="/student/<%= student.id %>/show"><button class="btn btn-dark">Show</button></a></td>
              <td><a href="/student/<%= student.id %>/edit"><button class="btn btn-info">Edit</button></a></td>
              <td>
                <form action="/classroom/<%= classroom.id %>/student/<%= student.id %>/delete?_method=DELETE" method="POST">
                    <button class="btn btn-danger" type="submit">Remove</button>
                </form>

              </td>
            </tr>
          <% } %>
         
        </tbody>
      </table>
    </div>
    
</div>

<div class="container">
    <h1>Manage student</h1>
    <div class="row ">
      <div class="button offset-10">
          <a href="/student/create"><button class="btn btn-info">+ Add Student</button></a>
          <a href="/student/assignStudentToClassroom"><button class="btn btn-info">+ assignStudentToClassroom</button></a>
      </div>
  </div>
    <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Age</th>
            <th scope="col">Classroom</th>
            <th scope="col">Show</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for ( student of students) { %>
            <tr>
              <td><%= student.id %></td>
              <td><%= student.name %></td>
              <td><%= student.last %></td>
              <td><%= student.age %></td>
              <td>
                <% if (student.Classrooms && student.Classrooms.length > 0) { %>
                  <ul>
                    <% student.Classrooms.forEach(classroom => { %>
                      <li><%= classroom.name %></li>
                    <% }) %>
                  </ul>
                <% } else { %>
                  <em>No classrooms assigned</em>
                <% } %>
              </td>

              <td><a href="/student/<%= student.id %>/show"><button class="btn btn-dark">Show</button></a></td>
              <td><a href="/student/<%= student.id %>/edit"><button class="btn btn-info">Edit</button></a></td>
              <td>
                <form action="/student/<%=student.id%>/delete?_method=DELETE" method="post" >
                 <button class="btn btn-danger">Delete</button>
                </form>
              </td>
            </tr>
          <% } %>
         
        </tbody>
      </table>
</div>

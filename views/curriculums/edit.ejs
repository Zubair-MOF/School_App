<div class="container">
  <div class="row offset-2">
      <h1>Edit Curriculum</h1>
      <div class="card col-8">
          <div class="card-body">
            <form action="/curriculum/<%= curriculum.id %>/edit" method="POST">
              <div class="row">
                <div class="mb-3 col-6">
                  <label for="ID" class="form-label">ID</label>
                  <input type="number" class="form-control" value="<%= curriculum.id %>" id="ID" name="id">
                </div>
                <div class="mb-3 col-6">
                  <label for="Name" class="form-label">Name</label>
                  <input type="text" class="form-control" value="<%= curriculum.name %>" id="Name" name="name">
                </div>
               
              </div>
              <div class="mb-3 offset-5"> 
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
        </div>
  </div>
</div>

<div class="container">
    <div class="row offset-2">
        <h1>Assign Student to Classroom</h1>
        <div class="card col-8">
            <div class="card-body">
              <form action="/teacher/assign" method="POST">
                <div class="row">
                  <!-- Student Dropdown -->
                  <div class="mb-3 col-6">
                    <label for="teacherId" class="form-label">Select Student</label>
                    <select class="form-select" id="teacherId" name="teacherId" required>
                      <option value="">-- Choose Student --</option>
                      <% teachers.forEach(teacher => { %>
                        <option value="<%= teacher.id %>"><%= teacher.name %> <%= teacher.last %></option>
                      <% }) %>
                    </select>
                  </div>

                  <!-- Classroom Dropdown -->
                  <div class="mb-3 col-6">
                    <label for="classroomId" class="form-label">Select Classroom</label>
                    <select class="form-select" id="classroomId" name="classroomId" required>
                      <option value="">-- Choose Classroom --</option>
                      <% classrooms.forEach(classroom => { %>
                        <option value="<%= classroom.id %>"><%= classroom.name %></option>
                      <% }) %>
                    </select>
                  </div>
                </div>
                <div class="mb-3 offset-5"> 
                  <button type="submit" class="btn btn-primary">Assign</button>
                </div>
              </form>
            </div>
        </div>
    </div>
</div>

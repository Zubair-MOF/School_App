<div class="container">
    <h1>Manage teacher</h1>
    <div class="row ">
      <div class="button offset-10">
          <a href="/teacher/create"><button class="btn btn-info">+ Add Teacher</button></a>
      </div>
      <div class="button">
        <a href="/teacher/assign">
          <button class="btn btn-warning">Assign Teacher to Classroom</button>
        </a>
     </div>
  </div>
    <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Age</th>
            <th scope="col">Show</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for ( teacher of teachers) { %>
            <tr>
              <td><%= teacher.id %></td>
              <td><%= teacher.name %></td>
              <td><%= teacher.last %></td>
              <td><%= teacher.age %></td>
              <td><a href="/teacher/<%= teacher.id %>/show"><button class="btn btn-dark">Show</button></a></td>
              <td><a href="/teacher/<%= teacher.id %>/edit"><button class="btn btn-info">Edit</button></a></td>
              <td>
                <form action="/teacher/<%=teacher.id%>/delete?_method=DELETE" method="post" >
                 <button class="btn btn-danger">Delete</button>
                </form>
              </td>
            </tr>
          <% } %>
         
        </tbody>
      </table>
</div>
